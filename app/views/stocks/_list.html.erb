<div class="row">
	<div class="col-9">
		<table class="table table-hover table-bordered">
		  <thead>
		    <tr>
		      <th scope="col">Ticker</th>
		      <th scope="col">Name</th>
		      <th scope="col">Price</th>
		      <th scope="col">Actions</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @tracked_stocks.each do |stocks| %>
		    <tr>
		      <th scope="row"><%= stocks.ticker %></th>
		      <td><%= stocks.name %></td>
		      <td><%= stocks.last_price %></td>
		      <td>	<% if current_user.can_track_stock? (stocks.ticker) %>
					<%= link_to 'Add to Portfolio' ,user_stocks_path(user: current_user,ticker: stocks.ticker),class:"btn btn-success",method: :post %>

					<% elsif current_user.id != @user.id %>

						<span class="badge badge-secondary">
		       	 			You are already tracking
		       	 			
		        			<% if !current_user.under_stock_limit? && current_user.stock_already_tracked?(stocks.ticker) %>
		    					10 stocks and this stock

							<% elsif current_user.under_stock_limit? && current_user.stock_already_tracked?(stocks.ticker) %>
		    					this stock

							<% elsif !current_user.under_stock_limit? %>
		    					10 stocks
							<% end %>s


		      			</span>


					<% end %>
				
		      		<% if current_user.id == @user.id %><%= link_to "Remove",user_stock_path(stocks),method: :delete, data: {confirm: 'Are You Sure?'},class:"btn btn-sm btn-warning"%>

		     <% end %>
		      </td>
		    </tr>

		    <% end %>
		    
		  </tbody>
		</table>

	</div>
</div>